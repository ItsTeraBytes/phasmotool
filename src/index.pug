        .ghost: div: include ghosts/shade
        .ghost: div: include ghosts/spirit
        .ghost: div: include ghosts/thaye
        .ghost: div: include ghosts/twins
        .ghost: div: include ghosts/wraith
        .ghost: div: include ghosts/yokai
        .ghost: div: include ghosts/yurei
